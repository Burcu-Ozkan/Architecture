@page "{goalSetId:int}"
@model GoalManager.Web.Pages.GoalManagement.AddGoalModel
@{
	ViewData["Title"] = "Add New Goal";
}

<div class="container py-4">
	<div class="text-center mb-5">
		<h1 class="h3 fw-light mb-2">Add New Goal</h1>
		<p class="text-muted">Create a new goal for your team</p>
	</div>

	<alert-messages error-messages="Model.ErrorMessages" success-messages="Model.SuccessMessages"></alert-messages>

	<div class="card border-0 shadow-sm mx-auto" style="max-width: 800px;">
		<div class="card-body p-4 p-md-5">
			<form method="post">
				<div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

				<div class="row g-3">
					<div class="col-md-12">
						<label asp-for="Title" class="form-label small text-muted">Goal Title</label>
						<input asp-for="Title" class="form-control" placeholder="Enter goal title" />
						<span asp-validation-for="Title" class="text-danger small"></span>
					</div>

					<div class="col-md-6">
						<label asp-for="GoalTypeId" class="form-label small text-muted">Goal Type</label>
						<select asp-for="GoalTypeId" asp-items="Model.GoalTypeOptions" class="form-select">
							<option value="">Select goal type</option>
						</select>
						<span asp-validation-for="GoalTypeId" class="text-danger small"></span>
					</div>

					<div class="col-md-6">
						<label asp-for="Percentage" class="form-label small text-muted">Percentage</label>
						<div class="input-group">
							<input asp-for="Percentage" class="form-control" placeholder="0-100" />
							<span class="input-group-text">%</span>
						</div>
						<span asp-validation-for="Percentage" class="text-danger small"></span>
					</div>

					<div class="col-md-6">
						<label asp-for="GoalValueTypeId" class="form-label small text-muted">Value Type</label>
						<select asp-for="GoalValueTypeId" asp-items="Model.GoalValueTypeOptions" class="form-select">
							<option value="">Select value type</option>
						</select>
						<span asp-validation-for="GoalValueTypeId" class="text-danger small"></span>
					</div>

					<div class="col-md-6">
						<label class="form-label small text-muted">Value Range</label>
						<div class="row g-2">
							<div class="col-4">
								<input asp-for="MinValue" class="form-control" placeholder="Min" />
								<span asp-validation-for="MinValue" class="text-danger small"></span>
							</div>
							<div class="col-4">
								<input asp-for="MidValue" class="form-control" placeholder="Mid" />
								<span asp-validation-for="MidValue" class="text-danger small"></span>
							</div>
							<div class="col-4">
								<input asp-for="MaxValue" class="form-control" placeholder="Max" />
								<span asp-validation-for="MaxValue" class="text-danger small"></span>
							</div>
						</div>
					</div>
				</div>

				<div class="mt-4 pt-3 border-top">
					<button type="submit" class="btn btn-primary px-4">
						<i class="fas fa-plus-circle me-2"></i>Add Goal
					</button>
					<a href="##" class="btn btn-outline-secondary ms-2" onClick="history.go(-1); return false;">Cancel</a>
				</div>
			</form>
		</div>
	</div>
</div>

<style>
	.form-control, .form-select {
		border-radius: 0.25rem;
		border: 1px solid #dee2e6;
	}

		.form-control:focus, .form-select:focus {
			border-color: #86b7fe;
			box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
		}

	.card {
		border-radius: 0.5rem;
	}
</style>