@page
@model GoalManager.Web.Pages.Organisation.CreateModel
@{
	ViewData["Title"] = "Create Organization";
}

<div class="container py-4">
	<div class="text-center mb-5">
		<h1 class="h3 fw-light mb-2">Create Organization</h1>
		<p class="text-muted">Add a new organization to your account</p>
	</div>

	<alert-messages error-messages="Model.ErrorMessages" success-messages="Model.SuccessMessages"></alert-messages>

	<div class="card border-0 shadow-sm mx-auto" style="max-width: 800px;">
		<div class="card-body p-4 p-md-5">
			<form method="post">
				<div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

				<div class="row g-3">
					<div class="col-md-12">
						<label asp-for="Organisation.Name" class="form-label small text-muted">Organization Name</label>
						<input asp-for="Organisation.Name" class="form-control" placeholder="Enter organization name" />
						<span asp-validation-for="Organisation.Name" class="text-danger small"></span>
					</div>
				</div>

				<div class="mt-4 pt-3 border-top">
					<button type="submit" class="btn btn-primary px-4">
						<i class="fas fa-plus-circle me-2"></i>Create Organization
					</button>
					<a href="##" class="btn btn-outline-secondary ms-2" onClick="history.go(-1); return false;">Cancel</a>
				</div>
			</form>
		</div>
	</div>
</div>

<style>
	.form-control, .form-select {
		border-radius: 0.25rem;
		border: 1px solid #dee2e6;
	}

		.form-control:focus, .form-select:focus {
			border-color: #86b7fe;
			box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
		}

	.card {
		border-radius: 0.5rem;
	}
</style>